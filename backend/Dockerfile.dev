# Development Dockerfile - Build without strict type checking
FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    libc6-compat \
    openssl \
    openssl-dev

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies
RUN npm install

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY . .

# Build with relaxed type checking
RUN npx tsc --noEmit false || true
RUN npx tsc --skipLibCheck --noEmit false

# Expose port
EXPOSE 3001

# Start in development mode
CMD ["npm", "run", "dev"]
